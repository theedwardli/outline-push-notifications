<% if @subscriber.verified %>
  $('#verify-pin').hide()
  $('#resend-text').hide()
  $('#status-box').removeClass()
  $('#status-box').addClass('alert alert-success')
  $('#status-message').text('Congrats! You are now subscribed to push notifications from The Outline.')
	$('#send-pin').show()
	$('#subscriber_phone').val('')
<% else %>
  $('#status-box').removeClass()
  $('#status-box').addClass('alert alert-warning')
  $('#status-message').text("Sorry, that wasn't the right pin.")
<% end %>
$('#status-box').show().delay(1500).fadeOut()
